/*
  Variables
*/

blue = #125688
offwhite = #fafafa
lightgrey  = #EDEEED
lightgray = lightgrey // OH Canada!

html
  font-size 13px
  font-family sans-serif

p
  font-size 15px
  line-height 1.5

h1
  font-family 'Billabong', sans-serif;
  text-align center
  font-weight 100
  font-size 100px
  margin 2rem 0
  letter-spacing -1px
  text-shadow 0px 4px 0 rgba(18, 86, 136, 0.11)
  a
    color blue
    text-decoration none
    &:focus
      outline 0


// "Instagram-like" webfont

@font-face {
    font-family: 'Billabong', sans-serif;
    font-weight: normal;
    font-style: normal;

}
